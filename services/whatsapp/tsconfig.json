{
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "declaration": true,
    "outDir": "dist",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@nexora/*": [
        "../../shared/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "../../shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}