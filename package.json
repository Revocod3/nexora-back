{
  "name": "nexora-back",
  "version": "1.0.0",
  "description": "Real estate lead management with WhatsApp & AI",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "turbo dev",
    "dev:crm": "turbo dev --filter crm",
    "dev:whatsapp": "turbo dev --filter whatsapp",
    "build": "turbo build",
    "build:crm": "turbo build --filter crm",
    "build:whatsapp": "turbo build --filter whatsapp",
    "start": "turbo start",
    "test": "turbo test",
    "lint": "turbo lint",
    "verify": "./scripts/verify-deploy.sh",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:build": "docker compose build"
  },
  "workspaces": [
    "services/*",
    "shared/*"
  ],
  "devDependencies": {
    "turbo": "^2.6.0"
  }
}
