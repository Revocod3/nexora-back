###############################################################################
# Nexora Back - Environment Configuration
# 
# Copy to .env: cp .env.example .env
# Generate secure keys: openssl rand -hex 32
###############################################################################

# System
NODE_ENV=production
SINGLE_TENANT_ID=tenant-prod

# Database
POSTGRES_DB=nexora_db
POSTGRES_USER=nexora_user
POSTGRES_PASSWORD=

# Service Ports
CRM_PORT=8000
WHATSAPP_PORT=3011

# Security - API Keys (generate with: openssl rand -hex 32)
CRM_INTERNAL_API_KEY=

# AdminJS (CRM Admin Panel)
ADMIN_EMAIL=admin@nexora.com
ADMIN_PASSWORD=
ADMIN_COOKIE_SECRET=
ADMIN_SESSION_SECRET=

# OpenAI (Agent Logic in CRM)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o

# WhatsApp Connector
WA_PRINT_QR=1
WA_FORCE_RELOGIN=0

###############################################################################
# Quick Start:
# 1. Generate secrets and fill values above
# 2. docker compose up -d
# 3. docker logs nexora-whatsapp (scan QR)
# 4. http://localhost:8000/admin
###############################################################################
