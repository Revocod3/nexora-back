###############################################################################
# Nexora Back - Environment Configuration
#
# Copy to .env: cp .env.example .env
# Generate secure keys: openssl rand -hex 32
###############################################################################

# System
NODE_ENV=production
SINGLE_TENANT_ID=tenant-prod

# Database
POSTGRES_DB=nexora_db
POSTGRES_USER=nexora_user
POSTGRES_PASSWORD=
DB_HOST=localhost
DB_PORT=5432

# Service Ports
CRM_PORT=8000
WHATSAPP_PORT=3011
PORT=8000

# Frontend
FRONTEND_URL=http://localhost:3000

# JWT Authentication
JWT_SECRET=
JWT_EXPIRES_IN=7d

# Security - API Keys (generate with: openssl rand -hex 32)
CRM_INTERNAL_API_KEY=

# WhatsApp Service
WHATSAPP_SERVICE_URL=http://localhost:3011/wa

# AdminJS (CRM Admin Panel)
ADMIN_EMAIL=admin@nexora.com
ADMIN_PASSWORD=
ADMIN_COOKIE_SECRET=
ADMIN_SESSION_SECRET=

# OpenAI (Agent Logic in CRM)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o

# Twilio (Voice Agent - Outbound Calls)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
TWILIO_WEBHOOK_BASE_URL=

# ElevenLabs (Text-to-Speech for Voice Agent)
ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID=h2cd3gvcqTp3m65Dysk7

# WhatsApp Connector
WA_PRINT_QR=1
WA_FORCE_RELOGIN=0

